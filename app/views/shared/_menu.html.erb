<div class="drawer-end">
  <input id="my-drawer-4" type="checkbox" class="drawer-toggle">
  <div class="drawer-content">
    <label for="my-drawer-4" class="drawer-button btn bg-slate-100 border-none shadow-none"><i  class="fa-solid fa-bars fa-2xl"></i></label>
  </div>
  <div class="drawer-side z-50">
    <label for="my-drawer-4" aria-label="close sidebar" class="drawer-overlay"></label>
    <ul class="menu p-4 w-52 md:w-80 min-h-full bg-base-200 text-base-content">
      <% if logged_in? %>
        <li>
          <details open>
            <summary><i class="fa-solid fa-user"></i><%= t('menu.my_page') %></summary>
            <ul>
              <li>
                <%= link_to my_page_path do%>
                  <i class="fa-solid fa-house"></i>
                  <%= t('menu.home') %>
                <% end %>
              </li>
              <li>
                <%= link_to new_post_path do %>
                  <i class="fa-solid fa-pen-to-square"></i>
                  <%= t('menu.new_post') %>
                <% end %>
              </li>
              <li>
                <%= link_to posts_users_path do %>
                  <i class="fa-solid fa-file-image"></i>
                  <%= t('menu.my_posts') %>
                <% end %>
              </li>
              <li>
                <%= link_to likes_users_path do %>
                  <i class="fa-regular fa-heart"></i>
                  <%= t('menu.liked_posts') %>
                <% end %>
              </li>
              <li>
                <%= link_to users_path do %>
                  <i class="fa-solid fa-gear"></i>
                  <%= t('menu.settings') %>
                <% end %>
              </li>
            </ul>
          </details>
        </li>
        <li class="mt-3">
          <div class="flex items-center">
            <i class="fa-solid fa-desktop"></i>
            <%= link_to t('menu.index'), posts_path %>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <i class="fa-solid fa-crown"></i>
            <%= link_to t('menu.ranking'), rank_path %>
          </div>
        </li>
        <li class="mt-3">
          <div class="flex items-center">
            <i class="fa-solid fa-right-from-bracket"></i>
            <%= link_to t('menu.logout'), logout_path, data: { turbo_method: :delete } %>
          </div>
        </li>
      <% else %>
        <li>
          <div class="flex items-center">
            <i class="fa-solid fa-right-to-bracket"></i>
            <%= link_to t('menu.login'), login_path %>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <i class="fa-solid fa-user-plus"></i>
            <%= link_to t('menu.sign_up'), new_users_path %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>