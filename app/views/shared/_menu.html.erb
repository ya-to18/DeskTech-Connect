<div class="drawer-end">
  <input id="my-drawer-4" type="checkbox" class="drawer-toggle">
  <div class="drawer-content">
    <label for="my-drawer-4" class="drawer-button btn bg-slate-100"><i  class="fa-solid fa-bars fa-2xl"></i></label>
  </div>
  <div class="drawer-side z-50">
    <label for="my-drawer-4" aria-label="close sidebar" class="drawer-overlay"></label>
    <ul class="menu p-4 w-80 min-h-full bg-base-200 text-base-content">
      <% if current_user %>
        <li><%= link_to '新規投稿', new_post_path %></li>
        <li><%= link_to '投稿一覧', posts_path %></li>
        <li>
          <details close>
            <summary>マイページ</summary>
            <ul>
              <li><%= link_to "自分の投稿一覧" %></li>
              <li><%= link_to "いいね一覧" %></li>
              <li><%= link_to "個人設定", users_path %></li>
            </ul>
          </details>
        </li>
        <li><%= link_to 'ログアウト', logout_path, data: { turbo_method: :delete } %></li>
      <% else %>
        <li><%= link_to 'ログイン', login_path %></li>
        <li><%= link_to 'サインアップ', new_user_path %></li>
      <% end %>
    </ul>
  </div>
</div>