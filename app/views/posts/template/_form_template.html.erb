<template id="gadget-display-template">
  <div id="subitem" class="hidden flex flex-col bg-white shadow rounded-lg text-base p-4 relative">
    <p id="main_form_brand_display" class="badge bg-slate-200"></p>
    <div class="flex justify-center py-2 h-2/3">
      <img id="main_form_imageUrl_display" class="h-24 w-32 shadow object-contain">
    </div>
    <div class="flex-grow flex flex-col">
      <p id="main_form_name_display" class="text-center p-2 h-16"></p>
      <p id="main_form_price_display" class="text-right font-bold md:p-2"></p>
      <p id="main_form_genre_display" class="text-right border-t"></p>
      <div class="flex justify-end">
        <button type="button" id="main_form_delete_btn" class="cancel-btn w-1/3" data-controller="form-btn" data-action="click->form-btn#delete" data-form-btn-target="deleteBtn">削除</button>
      </div>
    </div>
  </div>
</template>

<template id="gadget-form-template">
  <%= form.fields_for :gadgets, Gadget.new, child_index: "NEW_RECORD" do |gadget_form| %>
    <div id="gadget-fields_NEW_RECORD" class="hidden">
      <%= gadget_form.text_field :genre, { id: 'main_form_genre_NEW_RECORD', readonly: true } %>
      <%= gadget_form.url_field :image_url, id: 'main_form_imageUrl_NEW_RECORD' %>
      <%= gadget_form.text_field :name, id: 'main_form_name_NEW_RECORD' %>
      <%= gadget_form.text_field :brand, id: 'main_form_brand_NEW_RECORD' %>
      <%= gadget_form.number_field :price, id: 'main_form_price_NEW_RECORD' %>
      <%= gadget_form.text_field :maker_name, id: 'main_form_makerName_NEW_RECORD' %>
      <%= gadget_form.number_field :maker_code, id: 'main_form_makerCode_NEW_RECORD' %>
      <%= gadget_form.url_field :product_url, id: 'main_form_productUrl_NEW_RECORD' %>
      <%= gadget_form.text_field :product_id, id: 'main_form_productId_NEW_RECORD' %>
    </div>
  <% end %>
</template>
