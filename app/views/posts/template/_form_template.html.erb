<template id="gadget-display-template">
  <div id="gadget-display-index" class="flex flex-col bg-white shadow rounded-lg text-base p-4 relative">
    <p id="display_brand_index" class="badge bg-slate-200"></p>
    <div class="flex justify-center py-2 h-2/3">
      <img id="display_imageUrl_index" class="h-24 w-32 shadow object-contain">
    </div>
    <div class="flex-grow flex flex-col">
      <p id="display_name_index" class="text-center p-2 h-16"></p>
      <p id="display_price_index" class="text-right font-bold md:p-2"></p>
      <p id="display_genre_index" class="text-right border-t"></p>
      <div class="flex justify-end">
        <button type="button" id="delete_btn_index" class="cancel-btn w-1/3" data-controller="form-btn" data-action="click->form-btn#delete" data-form-btn-target="deleteBtn">削除</button>
      </div>
    </div>
  </div>
</template>

<template id="gadget-hidden-template">
  <%= form.fields_for :gadgets, Gadget.new, child_index: "index" do |gadget_form| %>
    <div id="gadget-hidden-index" class="hidden">
      <%= gadget_form.text_field :genre, id: 'hidden_genre_index' %>
      <%= gadget_form.url_field :image_url, id: 'hidden_imageUrl_index' %>
      <%= gadget_form.text_field :name, id: 'hidden_name_index' %>
      <%= gadget_form.text_field :brand, id: 'hidden_brand_index' %>
      <%= gadget_form.number_field :price, id: 'hidden_price_index' %>
      <%= gadget_form.text_field :maker_name, id: 'hidden_makerName_index' %>
      <%= gadget_form.text_field :maker_code, id: 'hidden_makerCode_index' %>
      <%= gadget_form.url_field :product_url, id: 'hidden_productUrl_index' %>
      <%= gadget_form.text_field :product_id, id: 'hidden_productId_index' %>
    </div>
  <% end %>
</template>
