<div class="grid grid-cols-2 md:grid-cols-5 gap-4 my-3">
  <% @products.each do |product| %>
    <button type="button" id= 'item-<%= product['productId'] %>' data-action="click->modal#itemSelect" data-modal-target="itemId">
      <div class="h-full">
        <div class="flex flex-col p-4 border rounded shadow-md hover:border-blue-900 cursor-pointer" >
          <div class="flex justify-center">
            <%= image_tag(product['mediumImageUrl'], data: { modal_target: 'imageUrl'}, class: "h-24 object-contain") %>
          </div>
          <p class="my-2 h-16 md:h-24 overflow-clip"><%= link_to truncate_name(product['productName']), product['productUrlPC'], { data: { modal_target: 'name'}, id: 'name' } %></p>
          <div class="flex justify-center text-lg font-bold">
            <p>Â¥</p>
            <p class="" data-modal-target="price"><%= number_with_delimiter(product['averagePrice']) %></p>
          </div>
          <p class="hidden" data-modal-target="maker"><%= product['makerName'] %></p>
        </div>
      </div>
    </button>
  <% end %>
</div>