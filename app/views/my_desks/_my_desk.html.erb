<%= turbo_frame_tag dom_id(my_desk) do %>
  <li class="border-b">
    <div class="flex justify-between">
      <%= link_to my_desk.name, my_desk_path(my_desk.id), data: { turbo_frame: "my-desk-content" } %>
      <div class="dropdown dropdown-right dropdown-end">
        <div tabindex="0" role="button" class="">
          <i class="fa-solid fa-ellipsis"></i>
        </div>
        <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-40">
          <li>
            <%= link_to t('.edit'), edit_my_desk_path(my_desk) %>
          </li>
          <li>
            <%= link_to t('.destroy'), my_desk_path(my_desk), data: { turbo_method: :delete } %>
          </li>
        </ul>
      </div>
    </div>
  </li>
<% end %>