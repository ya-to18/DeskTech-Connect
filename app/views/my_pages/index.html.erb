<div class="mx-auto max-w-screen-lg flex flex-col my-5 md:my-10 justify-center items-center">
  <h1 class="font-bold text-xl md:text-2xl"><%= t('.title', user_name: @user.name) %></h1>
  <div class="w-full md:flex gap-10 my-5 p-3">
    <div class="flex flex-col md:w-2/3">
      <div class="flex justify-between">
        <p class="font-bold">最新の投稿</p>
        <%= l @latest_post.created_at %>
      </div>
      <%= image_tag @latest_post.image.url, class: "w-full h-80 md:h-96 object-contain border shadow-lg" %>
      <div class="flex justify-end">
        <%= link_to post_path(@latest_post.id), class: "font-bold mt-2" do %>
          <i class="fa-solid fa-circle-arrow-right mr-2"></i>詳細
        <% end %>
      </div>
    </div>
    <div class="flex flex-col gap-2 mt-6 md:w-1/3">
      <%= link_to new_post_path, class: "flex items-center w-full p-2 border shadow-md rounded hover:bg-slate-100" do %>
        <i class="fa-solid fa-circle-chevron-right pr-2"></i>新規投稿
      <% end %>
      <%= link_to posts_users_path, class: "flex items-center w-full p-2 border shadow-md hover:bg-slate-100" do %>
        <i class="fa-solid fa-circle-chevron-right pr-2"></i>自分の投稿一覧
      <% end %>
      <%= link_to likes_users_path, class: "flex items-center w-full p-2 border shadow-md hover:bg-slate-100" do %>
        <i class="fa-solid fa-circle-chevron-right pr-2"></i>いいね一覧
      <% end %>
      <%= link_to users_path, class: "flex items-center w-full p-2 border shadow-md hover:bg-slate-100" do %>
        <i class="fa-solid fa-circle-chevron-right pr-2"></i>個人設定
      <% end %>
    </div>
  </div>
</div>
