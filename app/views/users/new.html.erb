<div class="text-xl">
  <h1 class="text-center m-6 text-2xl"><%= t('.title') %></h1>
  <div class="flex justify-center">
    <%= form_with model: @user, local: true do |f| %>
      <%= render 'shared/error_message', object: f.object %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control base-form-area w-full max-w-xs text-xl', size: "50" %>
      </div>
      <div class="form-group mt-5">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control base-form-area w-full max-w-xs text-xl' %>
      </div>
      <div class="form-group mt-5">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control base-form-area w-full max-w-xs text-xl' %>
      </div>
      <div class="form-group mt-5">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control base-form-area w-full max-w-xs text-xl' %>
      </div>
      <div class="flex justify-center">
        <%= f.submit t('defaults.sign_up'), class: 'base-btn w-full mt-8' %>
      </div>
    <% end %>
  </div>

  <div class='text-center m-10'>
    <%= link_to t('defaults.login'), login_path, class: 'link' %>
  </div>
</div>