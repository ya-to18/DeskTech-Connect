<% set_meta_tags title: t('.title') %>
<div class="flex justify-center my-10 md:my-5 h-full">
  <div class="bg-white w-4/4 md:w-2/3 p-5 border rounded-xl text-base md:text-lg">
    <h1 class="text-center m-6 text-xl md:text-2xl font-bold"><i class="fa-solid fa-user-plus mr-2"></i><%= t('.title') %></h1>
    <div class="flex justify-center">
      <%= form_with model: @user, local: true do |f| %>
        <%= render 'shared/error_message', object: f.object %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control base-form-area w-full max-w-xs', size: "50" %>
        </div>
        <div class="form-group mt-3">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control base-form-area w-full max-w-xs' %>
        </div>
        <div class="form-group mt-3">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control base-form-area w-full max-w-xs' %>
        </div>
        <div class="form-group mt-3">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: 'form-control base-form-area w-full max-w-xs' %>
        </div>
        <div class="flex justify-center">
          <%= f.submit t('defaults.sign_up'), class: 'base-btn w-2/4 mt-8' %>
        </div>
      <% end %>
    </div>

    <div class="flex items-center justify-center space-x-2 my-5">
      <div class="flex-1 md:flex-none md:w-1/5 h-0.5 bg-slate-200"></div>
      <span class="px-2">or</span>
      <div class="flex-1 md:flex-none md:w-1/5 h-0.5 bg-slate-200"></div>
    </div>

    <div class="flex justify-center">
      <%= link_to t('.x_login'), auth_at_provider_path(provider: :twitter), class: "base-btn"%>
    </div>
  </div>
</div>