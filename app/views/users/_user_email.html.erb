<%= turbo_frame_tag 'user-email' do %>
  <div class="flex my-4 w-auto justify-between">
    <p class="my-1">
      <i class="fa-solid fa-envelope pr-3"></i>
      <%= User.human_attribute_name :email %>
    </p>
    <%= link_to t('defaults.change'), edit_users_path, class: "base-btn", data: { turbo_frame: 'user-email' } %>
  </div>
  <p class="w-full text-center border rounded py-2 px-3 bg-white"><%= user.email %></p>
<% end %>