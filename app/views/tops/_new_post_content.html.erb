<div class="flex flex-col gap-4">
  <p class="md:text-xl underline decoration-dotted decoration-2 underline-offset-8">
    <i class="fa-regular fa-circle-check"></i>
    <%= t('.new_post') %>
  </p>
  <div class="grid grid-cols-2 md:grid-cols-4 gap-2">
    <% @recent_3_posts.each do |post| %>
      <%= image_tag post.image.url(:index_size), class: "shadow-xl rounded-xl border-2" %>
    <% end %>
  </div>
  <p class="text-right"><%= link_to t('.posts_index_link'), posts_path, class: "md:text-base border-b border-slate-600 hover:text-blue-500 hover:border-blue-500" %></p>

  <div class="flex flex-col items-center gap-5 mt-5 mx-5">
    <div class="flex gap-2 justify-center md:items-center md:text-lg">
      <i class="fa-regular fa-lightbulb"></i>
      <p><%= t('.login_info') %></p>
    </div>
    <%= image_tag 'top_page/item_detail.png', class: "md:w-3/5 rounded-xl border-2 shadow-xl" %>
  </div>
</div>