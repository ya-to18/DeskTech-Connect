<p class="md:text-xl underline decoration-dotted decoration-2 underline-offset-8 mb-5">
  <i class="fa-regular fa-circle-check"></i>
  <%= t('.logged_functions') %>
</p>

<div class="flex flex-col items-center my-10">
  <div class="collapse collapse-plus border bg-white w-11/12">
    <input type="radio" name="my-accordion-3" checked="checked" />
    <div class="collapse-title md:text-lg font-semibold">
      <i class="fa-solid fa-circle-chevron-right"></i>
      <%= t('.post') %>
    </div>
    <div class="collapse-content md:text-base">
      <div class="flex justify-start gap-2">
        <i class="fa-regular fa-circle-check p-1"></i>
        <div class="flex flex-col mb-3">
          <p>
            <%= t('.post_content_1') %>
          </p>
          <p>
            <%= t('.post_content_2') %>
          </p>
        </div>
      </div>
      <%= video_tag '/assets/videos/投稿方法_pc.mp4', playsinline: true, controls: true, autoplay: false, loop: false, muted: true, class: 'style-pc border' %>
      <%= video_tag '/assets/videos/投稿方法_mobile.mp4', playsinline: true, controls: true, autoplay: false, loop: false, muted: true, class: 'style-mobile border' %>
    </div>
  </div>

  <div class="collapse collapse-plus border bg-white w-11/12">
    <input type="radio" name="my-accordion-3" />
    <div class="collapse-title md:text-lg font-semibold">
      <i class="fa-solid fa-circle-chevron-right"></i>
      <%= t('.like_and_comment') %>
    </div>
    <div class="collapse-content md:text-base">
      <div class="md:ml-10">
        <div class="flex justify-start gap-2 items-center">
          <i class="fa-regular fa-circle-check"></i>
          <%= t('.like_content') %>
        </div>
        <div class="flex justify-center md:justify-start w-ful md:ml-6 mt-3">
          <%= image_tag 'top_page/like.png', class: "w-2/3 md:w-1/3 object-contain shadow border-2 rounded" %>
        </div>
        <div class="flex justify-start gap-2 md:items-center mt-3">
          <i class="fa-regular fa-circle-check p-1"></i>
          <%= t('.comment_content') %>
        </div>
        <div class="flex justify-center md:justify-start w-ful md:ml-6 mt-3">
          <%= image_tag 'top_page/comment.png', class: "w-full md:w-2/3 object-contain shadow border-2 rounded" %>
        </div>
      </div>
    </div>
  </div>

  <div class="collapse collapse-plus border bg-white w-11/12">
    <input type="radio" name="my-accordion-3" />
    <div class="collapse-title md:text-lg font-semibold">
      <i class="fa-solid fa-circle-chevron-right"></i>
      <%= t('.my_desk') %>
    </div>
    <div class="collapse-content md:text-base">
      <div class="md:ml-10">
        <div class="flex justify-start gap-2 md:items-center">
          <i class="fa-regular fa-circle-check p-1"></i>
          <%= t('.my_desk_content_1') %>
        </div>
        <div class="flex flex-col justify-center items-center w-ful mt-3 md:justify-normal md:flex-row  md:ml-6">
          <%= image_tag 'top_page/my_desk_1.png', class: "md:w-1/3 object-contain shadow border-2 rounded" %>
          <i class="fa-solid fa-circle-arrow-right my-9 md:mx-9 text-xl style-pc"></i>
          <i class="fa-solid fa-circle-arrow-down my-9 md:mx-9 text-xl style-mobile"></i>
          <%= image_tag 'top_page/my_desk_2.png', class: "md:w-1/3 object-contain shadow border-2 rounded" %>
        </div>
        <div class="flex justify-start gap-2 md:items-center mt-3">
          <i class="fa-regular fa-circle-check p-1"></i>
          <%= t('.my_desk_content_2') %>
        </div>
        <div class="flex justify-center md:justify-start w-ful md:ml-6 mt-3">
          <%= image_tag 'top_page/my_desk_show.png', class: "w-full md:w-2/3 object-contain shadow border-2 rounded" %>
        </div>
      </div>
    </div>
  </div>

  <div class="collapse collapse-plus border bg-white w-11/12">
    <input type="radio" name="my-accordion-3" />
    <div class="collapse-title md:text-lg font-semibold">
      <i class="fa-solid fa-circle-chevron-right"></i>
      <%= t('.ranking') %>
    </div>
    <div class="collapse-content md:text-base">
      <div class="md:ml-10">
        <div class="flex justify-start gap-2">
          <i class="fa-regular fa-circle-check p-1"></i>
          <div class="flex flex-col gap-2">
            <p><%= t('.post_rank') %></p>
            <p><%= t('.post_rank_content') %></p>
          </div>
        </div>
        <div class="flex justify-start gap-2 mt-5">
          <i class="fa-regular fa-circle-check p-1"></i>
          <div class="flex flex-col gap-2">
            <p><%= t('.item_rank') %></p>
            <p><%= t('.item_rank_content') %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>