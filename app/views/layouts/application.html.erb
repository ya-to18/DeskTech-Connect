<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag('favicon.ico') %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= display_meta_tags(default_meta_tags) %>

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-H2SXVP76XV"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-H2SXVP76XV');
    </script>
  </head>

  <body class="flex flex-col min-h-screen bg-slate-50 text-slate-600 bg-main bg-contain">
    <%= render "shared/header" %>
    <%= render 'shared/flash_message' %>
    <div class="container mx-auto flex-grow justify-center">
      <%= yield %>
    </div>
    <%= render "shared/footer" %>
    <div data-controller="top-scroll">
      <%= link_to '#', class:"text-4xl fixed right-2 bottom-8 md:right-12 md:bottom-16", data: { top_scroll_target: "btn", action: "click->top-scroll#scroll" } do %>
        <i class="fa-solid fa-circle-chevron-up"></i>
      <% end %>
    </div>

    <div id="modal" class="hidden fixed w-screen h-screen top-0 left-0 bg-gray-700/50 z-10 ">
      <div class="modal-background w-screen h-screen cursor-pointer"></div>
      <div class="absolute top-1/4 left-5 md:left-1/3 -translate-x-1/2 -translate-y-1/2 w-11/12 md:w-4/12 bg-white p-2 md:p-5 rounded shadow overflow-auto animate-fade-in-fwd">
        <div class="flex justify-end">
          <button class="modal-close">
            <i class="fa-solid fa-circle-xmark transition hover:rotate-180 hover:text-blue-500 active:text-blue-700"></i>
          </button>
        </div>
        <%= turbo_frame_tag "modal_frame" do %>
        <% end %>
      </div>
    </div>
  </body>
</html>
