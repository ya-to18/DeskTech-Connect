<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag('favicon.ico') %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= display_meta_tags(default_meta_tags) %>
  </head>

  <body class="flex flex-col min-h-screen bg-slate-50 text-slate-600 bg-main bg-contain">
    <%= render "shared/header" %>
    <%= render 'shared/flash_message' %>
    <div class="container mx-auto flex-grow justify-center">
      <%= yield %>
    </div>
    <%= render "shared/footer" %>
    <div data-controller="top-scroll">
      <%= link_to '#', class:"text-4xl fixed right-2 bottom-8 md:right-12 md:bottom-16", data: { top_scroll_target: "btn", action: "click->top-scroll#scroll" } do %>
        <i class="fa-solid fa-circle-chevron-up"></i>
      <% end %>
    </div>
  </body>
</html>
