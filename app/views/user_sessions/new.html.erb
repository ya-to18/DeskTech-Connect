<div class="text-xl">
  <h1 class="text-center text-2xl m-6">ログイン</h1>
  <div class="flex justify-center">
    <%= form_with url: login_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: 'form-control base-form-area w-full max-w-xs text-xl', size: "50" %>
      </div>
      <div class="form-group mt-5">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control base-form-area w-full max-w-xs text-xl' %>
      </div>
      <div class="actions mt-8">
        <%= f.submit 'ログイン', class: 'base-btn w-full' %>
      </div>
    <% end %>
  </div>
  <div class='flex text-center flex-col m-10'>
    <%= link_to 'アカウント登録', new_users_path, class: 'link hover:link-primary mb-5' %>
    <%= link_to 'パスワードのお忘れの方はこちらをクリックしてください。', new_password_reset_path, class: 'link hover:link-primary' %>
  </div>
</div>