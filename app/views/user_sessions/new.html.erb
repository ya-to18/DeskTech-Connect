    <div class="">
      <h1>ログイン</h1>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, class: 'form-control input input-bordered w-full max-w-xs' %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control input input-bordered w-full max-w-xs' %>
        </div>
        <div class="actions">
          <%= f.submit 'ログイン', class: 'btn' %>
        </div>
      <% end %>
      <div class='text-center'>
        <%= link_to '登録ページへ', new_user_path, class: 'link' %>
        <a href="#">パスワードをお忘れの方はこちら</a>
      </div>
    </div>