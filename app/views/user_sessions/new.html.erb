<div class="flex justify-center mt-10 md:mt-8 h-96">
  <div class="bg-white w-4/4 md:w-2/3 m-3 p-5 md:p-0 border rounded-xl text-base md:text-lg">
    <h1 class="text-center m-6 text-xl md:text-2xl font-bold"><i class="fa-solid fa-arrow-right-to-bracket mr-3"></i><%= t('.title') %></h1>
    <div class="flex justify-center w-full">
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :email, t('.email') %>
          <%= f.text_field :email, class: 'form-control base-form-area w-full max-w-xs', size: "50" %>
        </div>
        <div class="form-group mt-5">
          <%= f.label :password, t('.password') %>
          <%= f.password_field :password, class: 'form-control base-form-area w-full max-w-xs' %>
        </div>
        <div class="actions mt-8 flex justify-center">
          <%= f.submit t('defaults.login'), class: 'base-btn w-2/4' %>
        </div>
      <% end %>
    </div>

<%= link_to auth_at_provider_path(provider: :twitter), class: 'btn w-100 twitter' do %>
   <i class="bi bi-twitter"></i> Twitterでログイン
<% end %>

    <div class='flex text-center flex-col m-10 gap-5'>
      <p><%= link_to t('.sign_up'), new_users_path, class: 'link hover:text-blue-500 mb-5' %></p>
      <p><%= link_to t('.password_reset'), new_password_reset_path, class: 'link hover:text-blue-500' %></p>
    </div>
  </div>
</div>